# XCash Migration Network Environment Variables
# Example configuration for local testing with docker-compose.migration.yml
#
# IMPORTANT: These are example values for local testing only!
# For production, copy this file to .env and use real credentials.

# Build configuration
BUILD_THREADS=8
CMAKE_BUILD_TYPE=Release

# Data directory for blockchain data (host path)
DATA_DIR=./data

# Node 1 (Leader)
NODE1_PUB_ADDR=<your_leader_xcash_address>
NODE1_SEC_KEY=<your_leader_64byte_dpos_keypair_hex>

# Node 2 (Follower)
NODE2_PUB_ADDR=<your_node2_xcash_address>
NODE2_SEC_KEY=<your_node2_64byte_dpos_keypair_hex>

# Node 3 (Follower)
NODE3_PUB_ADDR=<your_node3_xcash_address>
NODE3_SEC_KEY=<your_node3_64byte_dpos_keypair_hex>

# Leader public key (derived from NODE1_SEC_KEY via Ed25519)
# This is the public key that followers will use to verify block signatures
LEADER_PUBKEY=<derived_from_leader_secret_key>
